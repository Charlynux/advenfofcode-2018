(ns adventofcode2018.day1)

(defn parse-file [text]
  (->> (clojure.string/split text #"\n")
       (map read-string)))

(->>
 (slurp "day1.input")
 (parse-file)
 (apply +))


(def data [1 -2 3 1])

(->>
 (slurp "day1.input")
 (parse-file)
 (cycle)
 (reductions + 0)
 (reduce (fn [acc val] (if (acc val) (reduced val) (conj acc val))) #{})
 )